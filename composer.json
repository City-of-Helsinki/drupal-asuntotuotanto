{
    "name": "druidfi/spell",
    "description": "Spell to create a new Drupal 9 project",
    "type": "project",
    "license": "MIT",
    "homepage": "https://github.com/druidfi/spell",
    "authors": [
        {
            "name": "Druid.fi",
            "email": "info@druid.fi"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "brainmaestro/composer-git-hooks": "^2.7",
        "composer/installers": "^1.9",
        "cweagans/composer-patches": "^1.6.7",
        "druidfi/omen": "^0.2.0",
        "drupal/admin_toolbar": "^2.3",
        "drupal/coffee": "^1.0",
        "drupal/core-composer-scaffold": "^9.0",
        "drupal/core-recommended": "^9.0",
        "drupal/field_group": "^3.1",
        "drupal/gin": "^3.0",
        "drupal/gin_login": "^1.0",
        "drupal/gin_toolbar": "^1.0@beta",
        "drupal/key": "^1.8",
        "drupal/menu_block": "^1.4",
        "drupal/menu_block_current_language": "^1.2",
        "drupal/paragraphs": "^1.10",
        "drupal/paragraphs_asymmetric_translation_widgets": "^1.0",
        "drupal/pathauto": "^1.8",
        "drupal/rabbit_hole": "^1.0@beta",
        "drupal/redirect": "^1.3",
        "drupal/search_api": "^1.17",
        "drupal/twig_tweak": "^2.1",
        "drush/drush": "^10.3",
        "nodespark/des-connector": "5.x-dev",
        "zaporylie/composer-drupal-optimizations": "^1.0"
    },
    "require-dev": {
        "drupal/core-dev": "^9.0",
        "drupal/coder": "^8.3",
        "drupal/console": "~1.0",
        "drupal/drupal-extension": "~4.1",
        "phpunit/phpunit": "~8.5.8"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "extra": {
        "composer-exit-on-patch-failure": true,
        "drupal-scaffold": {
            "allowed-packages": [
                "drupal/core"
            ],
            "locations": {
                "web-root": "./public"
            },
            "file-mapping": {
                "[project-root]/.editorconfig": false
            }
        },
        "enable-patching": true,
        "installer-paths": {
            "public/core": ["type:drupal-core"],
            "public/libraries/{$name}": ["type:drupal-library"],
            "public/modules/contrib/{$name}": ["type:drupal-module"],
            "public/modules/custom/{$name}": ["type:drupal-module-custom"],
            "public/profiles/{$name}": ["type:drupal-profile"],
            "public/themes/contrib/{$name}": ["type:drupal-theme"],
            "public/themes/custom/{$name}": ["type:drupal-theme-custom"],
            "drush/{$name}": ["type:drupal-drush"]
        },
        "hooks": {
            "pre-push": "make test"
        },
        "patches": {
            "drupal/core": {
                "https://www.drupal.org/project/drupal/issues/2868193#comment-12258614":"https://www.drupal.org/files/issues/2868193-10.patch",
                "https://www.drupal.org/project/drupal/issues/2313309#comment-13800552":"patches/drupal_core_91x_admin_language.patch",
                "https://www.drupal.org/project/drupal/issues/3054641#comment-13385850":"https://www.drupal.org/files/issues/2019-12-10/3054641-14.patch",
                "https://www.drupal.org/project/drupal/issues/2925297#comment-13274046": "https://www.drupal.org/files/issues/2019-09-26/core-typed_config_handle_missing_config-2925297-18.patch",
                "https://www.drupal.org/project/drupal/issues/2466553": "https://www.drupal.org/files/issues/2020-05-14/2466553-75-d91x.patch"
            }
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "scripts": {
        "fix": [
            "phpcbf --colors --standard=Drupal --extensions=php,theme,module --ignore='*.css,*.md,node_modules' ./public/modules/custom ./public/themes/custom"
        ],
        "post-update-cmd": "cghooks update",
        "test": [
            "@test-behavioral",
            "@test-static-js",
            "@fix",
            "@test-unit"
        ],
        "test-behavioral": [
            "tools/behavioral-tests"
        ],
        "test-static-js": [
            "node_modules/eslint/bin/eslint.js --color --ignore-pattern '**/vendor/*' --c ./public/core/.eslintrc.json --global nav,moment,responsiveNav:true ./public/modules/custom/*/js",
            "node_modules/eslint/bin/eslint.js --color --ignore-pattern '**/vendor/*' --c ./public/core/.eslintrc.json --global nav,moment,responsiveNav:true ./public/themes/custom/*/js"
        ],
        "lint": [
            "phpcs --colors --standard=Drupal --extensions=php,theme,module --ignore='*.css,*.md,node_modules' ./public/modules/custom ./public/themes/custom"
        ],
        "test-unit": [
            "phpunit -c phpunit.xml.dist --testsuite unit"
        ]
    }
}
