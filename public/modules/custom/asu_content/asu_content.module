/**
 * Implements hook_entity_bundle_info_alter().
 */
function asu_content_entity_bundle_info_alter(array &$bundles): void {
  if (isset($bundles['node']['project'])) {
    $bundles['node']['project']['class'] = Project::class;
  }
  if (isset($bundles['node']['apartment'])) {
    $bundles['node']['apartment']['class'] = Apartment::class;
  }
}

/**
 * Implements hook_form_BASE_FORM_ID_alter().
 */
function asu_content_form_node_form_alter(&$form, $form_state) {
  asu_content_hide_node_title($form);
  asu_content_show_computed_fields($form, $form_state);
  asu_content_project_add_archived_handling($form, $form_state);
  asu_content_hide_field_in_apartment_edit($form, $form_state);

  // Only show this when editing the form.
  if (!$form_state->isSubmitted()) {

    \Drupal::logger('asu_content')->notice('Checking integration fields on node form, form state is @form_state', ['@form_state' => $form_state->isSubmitted() ? 'submitted' : 'not submitted']);
    $entity = $form_state->getFormObject()->getEntity();
    asu_content_check_apartment_integration_fields($form, $entity, "form");
  }
}

/**
 * Get integration warning message text.
 *
 * @param string $integration_name
 *   The integration name.
 * @param array $missing_fields
 *   The missing fields.
 *
 * @return string
 *   The integration warning message text.
 */
function asu_content_get_integration_warning_message_text($integration_name, array $missing_fields) {
  $integration_name = preg_replace('/^field_publish_on_/', '', $integration_name);
  return \Drupal::translation()->translate('<strong>Integration Warning:</strong> "@integration"-integration is enabled, but the following required fields are empty: @fields.', [
    '@integration' => $integration_name,
    '@fields' => implode(', ', $missing_fields),
  ])->render();
}

/**
 * Add integration warning message to form.
 *
 * @param array $form
 *   The form array.
 * @param string $integration_name
 *   The integration name.
 * @param array $missing_fields
 *   The missing fields.
 */
function asu_content_add_integration_warning_message_to_form(&$form, string $integration_name, array $missing_fields) {
  $warning_message_text = asu_content_get_integration_warning_message_text($integration_name, $missing_fields);
  \Drupal::logger('asu_content')->notice('Warning message for @integration: @warning_message_text', [
    '@integration' => $integration_name,
    '@warning_message_text' => $warning_message_text,
  ]);
  $form['custom_warning_message_' . $integration_name] = [
    '#markup' => '<div role="contentinfo" class="messages messages--warning">' . $warning_message_text . '</div>',
    '#weight' => -1000,
  ];
}

/**
 * Push an integration warning message to Drupal's messenger service.
 *
 * @param string $integration_name
 *   The integration name.
 * @param array $missing_fields
 *   The missing fields.
 */
function asu_content_add_integration_warning_message_to_messenger(string $integration_name, array $missing_fields) {
  $warning_message_text = asu_content_get_integration_warning_message_text($integration_name, $missing_fields);

  \Drupal::messenger()->addWarning([
    '#markup' => $warning_message_text,
    '#allowed_tags' => ['strong', 'em', 'div', 'span', 'br'],
  ]);
}

/**
 * Validates integration fields on an apartment node entity.
 *
 * Use this for both IEF (inline entity form) or standalone form validation.
 *
 * @param \Drupal\Core\Entity\EntityInterface $entity
 *   The apartment node entity to validate.
 * @param string $add_message_to
 *   Whether to add warnings to the "messenger" or "form", default "messenger".
 *
 * @return array
 *   An associative array where the keys are trigger field machine names,
 *   and each value is a list of missing required field *labels*
 *   for that integration trigger (empty array if none missing).
 */
function asu_content_check_apartment_integration_fields(&$form, EntityInterface $entity, $add_message_to = "messenger") {
  // Map of integration triggers to required field names.
  $integration_triggers = IntegrationConstants::INTEGRATION_TRIGGERS;

  $result = [];

  foreach ($integration_triggers as $trigger_field => $base_fields) {
    // Optionally log, then check trigger field.
    $missing_fields = [];
    if (
      $entity->hasField($trigger_field) &&
      !$entity->get($trigger_field)->isEmpty() &&
      $entity->get($trigger_field)->value == 1
    ) {

      $required_apartment_fields = IntegrationConstants::getRequiredApartmentFieldsForIntegration($trigger_field, asu_content_get_ownershiptype());
      $required_project_fields = IntegrationConstants::getRequiredProjectFieldsForIntegration($trigger_field);

      $project = $entity->getProject();
      // Validate project fields.
      foreach ($required_project_fields as $field_name) {
        if ($project->hasField($field_name) && $project->get($field_name)->isEmpty()) {
          $field_label = t(
            "Project: @field_label",
            [
              '@field_label' => $project
                ->get($field_name)
                ->getFieldDefinition()
                ->getLabel(),
            ]
          );
          $missing_fields[] = $field_label;
        }
      }

      // Validate apartment fields.
      foreach ($required_apartment_fields as $field_name) {
        if ($entity->hasField($field_name) && $entity->get($field_name)->isEmpty()) {
          $field_label = $entity->get($field_name)->getFieldDefinition()->getLabel();
          $missing_fields[] = $field_label;
        }
      }
    }
    if (!empty($missing_fields)) {
      if ($add_message_to == "messenger") {
        asu_content_add_integration_warning_message_to_messenger($trigger_field, $missing_fields);
      }
      elseif ($add_message_to == "form") {
        asu_content_add_integration_warning_message_to_form($form, $trigger_field, $missing_fields);
      }
    }
    $result[$trigger_field] = $missing_fields;
  }

  return $result;
}

/**
 * Add archived button logic, button widget positioning is handled in theme.
 */
function asu_content_project_add_archived_handling(&$form, &$form_state) {
  // Add javascript to project form.
  $formObject = $form_state->getFormObject();
  if ($formObject instanceof EntityFormInterface) {
    $entity = $formObject->getEntity();
    if (
      $entity->getEntityTypeId() === 'node'
      && in_array($entity->bundle(), ['project'])
    ) {
      if (isset($form['field_archived'])) {
        $form['actions']['field_archived_action'] = $form['field_archived'];
      }

      $form['#attached']['library'][] = 'asu_content/asu_editform';
    }
  }
}

/**
 * Hide node title from specified node forms.
 */
function asu_content_hide_node_title(&$form) {
  $forms_to_hide_title_from = [
    'node_apartment_edit_form',
    'node_apartment_form',
  ];

  if (!in_array($form['#form_id'], $forms_to_hide_title_from)) {
    return;
  }

  if (isset($form['title'])) {
    $form['title']['#access'] = FALSE;
  }
}

/**
 * Show computed field on apartment node.
 */
function asu_content_show_computed_fields(&$form, $form_state) {
  if ($form_state->getFormObject() instanceof NodeForm) {
    $entity = $form_state->getFormObject()->getEntity();
    if ($entity->isNew()) {
      return;
    }
    if (
      $entity->hasField('field_living_area') &&
      $entity->hasField('field_debt_free_sales_price')
    ) {
      if (
        !$entity->field_living_area->value ||
        !$entity->field_debt_free_sales_price
      ) {
        return;
      }

      $price = $entity->field_debt_free_sales_price->value;
      $living_area = $entity->field_living_area->value;

      if ($price && $price != 0 && $living_area && $living_area != 0) {
        $value = number_format((float) $price / $living_area, 2, '.', '');
        $form['field_debt_free_sales_price']['widget'][0]['value']['#description'] = FieldFilteredMarkup::create(
          $value . ' €/m²'
        );
      }
    }
  }
}

/**
 * Hide price fields which is not used in HASO.
 */
function asu_content_hide_field_in_apartment_edit(&$form, $form_state) {
  if ($ownership_type = asu_content_get_ownershiptype()) {
    if (strtolower($ownership_type) == 'haso') {
      asu_content_hide_fields_in_haso($form);
    }

    if (strtolower($ownership_type) == 'hitas') {
      asu_content_hide_fields_in_hitas($form);
    }
  }

}

/**
 * Get HASO / HITAS edit form ownership type from url.
 */
function asu_content_get_ownershiptype() {
  $ownership_type = NULL;
  $node = \Drupal::routeMatch()->getParameter('node');

  if ($node instanceof Apartment || $node instanceof Project) {
    $project = $node instanceof Apartment ? $node->getProject() : $node;

    if ($project instanceof Project && $project->hasField('field_ownership_type')) {
      $ownership_term = $project->get('field_ownership_type')->entity;
      if (!$ownership_term) {
        $references = $project->get('field_ownership_type')->referencedEntities();
        $ownership_term = reset($references) ?: NULL;
      }
      if ($ownership_term && method_exists($ownership_term, 'getName')) {
        $ownership_type = $ownership_term->getName();
      }
    }
  }

  return $ownership_type;
}

/**
 * Hide fields in HASO / HITAS apartment edit form.
 */
function asu_content_inline_entity_form_entity_form_alter(&$entity_form, &$form_state) {
  if ($entity_form['#entity_type'] == 'node' && $entity_form['#bundle'] == 'apartment') {
    $ownership_type = asu_content_get_ownershiptype();

    if ($ownership_type && strtolower($ownership_type) == 'haso') {
      asu_content_hide_fields_in_haso($entity_form);
    }

    if ($ownership_type && strtolower($ownership_type) == 'hitas') {
      asu_content_hide_fields_in_hitas($entity_form);
    }

    if (isset($entity_form['#entity']) && $entity_form['#entity'] instanceof EntityInterface) {
      asu_content_check_apartment_integration_fields($entity_form, $entity_form['#entity'], "form");
    }
  }

}

