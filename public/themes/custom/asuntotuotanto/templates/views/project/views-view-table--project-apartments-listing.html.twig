{#
/**
 * @file
 * Theme override for displaying a view as a table.
 *
 * Available variables:
 * - attributes: Remaining HTML attributes for the element.
 *   - class: HTML classes that can be used to style contextually through CSS.
 * - title : The title of this group of rows.
 * - header: The table header columns.
 *   - attributes: Remaining HTML attributes for the element.
 *   - content: HTML classes to apply to each header cell, indexed by
 *   the header's key.
 *   - default_classes: A flag indicating whether default classes should be
 *     used.
 * - caption_needed: Is the caption tag needed.
 * - caption: The caption for this table.
 * - accessibility_description: Extended description for the table details.
 * - accessibility_summary: Summary for the table details.
 * - rows: Table row items. Rows are keyed by row number.
 *   - attributes: HTML classes to apply to each row.
 *   - columns: Row column items. Columns are keyed by column number.
 *     - attributes: HTML classes to apply to each column.
 *     - content: The column content.
 *   - default_classes: A flag indicating whether default classes should be
 *     used.
 * - responsive: A flag indicating whether table is responsive.
 * - sticky: A flag indicating whether table header is sticky.
 * - summary_element: A render array with table summary information (if any).
 *
 * @see template_preprocess_views_view_table()
 */
#}

{{ attach_library('asuntotuotanto/apartments-list-item-toggle') }}

{%
  set classes = [
    'cols-' ~ header|length,
    responsive ? 'responsive-enabled',
    sticky ? 'sticky-enabled',
  ]
%}

{# === Pre-pass: single calculation for mobile + desktop to avoid duplicating code === #}
{% set _computed = [] %}
{% for row in rows %}
  {% set apartment_structure = row.columns.field_apartment_structure.content.0.field_output['#markup']|striptags|trim %}
  {% set living_area_size = row.columns.field_living_area.content.0.field_output['#markup']|striptags|trim %}
  {% set dfs = row.columns.field_debt_free_sales_price.content.0.field_output['#markup']|default('')|striptags|trim %}
  {% set ror = row.columns.field_right_of_occupancy_payment.content.0.field_output['#markup']|default('')|striptags|trim %}
  {% set rel = row.columns.field_release_payment.content.0.field_output['#markup']|default('')|striptags|trim %}

  {# rooms #}
  {% set structure_norm = apartment_structure|upper|replace({' ': ''}) %}
  {% set rooms_token = (structure_norm|split('H'))[0] %}
  {% set _rooms = rooms_token matches '/^\\d+$/' ? rooms_token : '1' %}

  {# area #}
  {% set _area = living_area_size|replace({',': '.'}) %}

  {# price selection and normalization for data-attr #}
  {% set ror_clean = ror|replace({'€':'',' ': '','\u00A0':'', ',': '.'}) %}
  {% set rel_clean = rel|replace({'€':'',' ': '','\u00A0':'', ',': '.'}) %}
  {% set dfs_clean = dfs|replace({'€':'',' ': '','\u00A0':'', ',': '.'}) %}
  {% set has_ror = ror_clean matches '/[1-9]/' %}
  {% set has_rel = rel_clean matches '/[1-9]/' %}

  {% set price_title = 'Debt-free sales price'|t %}
  {% set display_price = dfs %}
  {% if has_ror %}
    {% set display_price = ror %}
    {% set price_title = 'Right of occupancy payment'|t %}
  {% elseif has_rel %}
    {% set display_price = rel %}
    {% set price_title = 'Right of occupancy payment'|t %}
  {% endif %}

  {% set price_euros = display_price|replace({'€':'',' ': '','\u00A0':'', ',': '.'}) %}
  {% set _price_int = price_euros|split('.')|first %}

  {% set _computed = _computed|merge([{
    rooms: _rooms,
    area: _area,
    price_int: _price_int,
    price_title: price_title,
    display_price: display_price
  }]) %}
{% endfor %}
{# ============================================================================ #}

<div class="project__apartments project__apartments--mobile" aria-hidden="true">
  <ul class="project__apartments-list wrapper wrapper--mw-1264">
    {% for row in rows %}
      {% set apartment_number = row.columns.field_apartment_number.content.0.field_output['#markup']|striptags|trim %}
      {% set apartment_structure = row.columns.field_apartment_structure.content.0.field_output['#markup']|striptags|trim %}
      {% set floor = row.columns.field_floor.content.0.field_output['#markup']|striptags|trim %}
      {% set living_area_size = row.columns.field_living_area.content.0.field_output['#markup']|striptags|trim %}
      {% set nid = row.columns.nid.content.0.field_output['#markup']|striptags|trim %}

      {% set application_status = row.application_status %}
      {% set is_application_period_active = row.is_application_period_active %}
      {% set reserved_or_sold = row.reserved_or_sold %}
      {% set application_url = row.application_url %}
      {% set application_url_title = row.application_url_title %}
      {% set can_apply_afterwards = row.can_apply_afterwards %}
      {% set is_free = row.is_free %}

      {# get pre-calculated values ​​by index #}
      {% set comp = _computed[loop.index0] %}
      {% set price_title = comp.price_title %}
      {% set debt_free_sales_price = comp.display_price %}

      <li class="project__apartments-item" data-rooms="{{ comp.rooms }}" data-area="{{ comp.area }}" data-price="{{ comp.price_int }}">>
        <button
          aria-expanded="false"
          class="project__apartments-item-button"
          aria-label="{{ "Open apartment @apartment_number information"|t({'@apartment_number': apartment_number}) }}"
        >
          <span>{{ apartment_number }}</span>
          <span aria-hidden="true" class="project__apartment-application-status project__apartment-application-status--{{ application_status.status|trim }}"></span>
          <span>{{ apartment_structure }}</span>
          {% include "@hdbt/misc/icon.twig" with {icon: 'angle-down', label: ''} %}
        </button>
        <div aria-hidden="true" class="project__apartments-item-content is-hidden">
          <ul class="project__apartments-item-details-list">
            <li class="project__apartments-item-details-item">
              <p>
                <span>
                  {% trans %}
                    Floor
                  {% endtrans %}
                </span>
                <span>
                  {{ floor }}
                </span>
              </p>
            </li>
            <li class="project__apartments-item-details-item">
              <p>
                <span>
                  {% trans %}
                    Living area size
                  {% endtrans %}
                </span>
                <span>
                  {{ living_area_size }} m<sup>2</sup>
                </span>
              </p>
            </li>
            <li class="project__apartments-item-details-item">
              <p>
                <span>
                  {{ price_title }}
                </span>
                <span>
                  {{ debt_free_sales_price }}
                </span>
              </p>
            </li>
            <li class="project__apartments-item-details-item">
              <p>
                <span>
                  {% trans %}
                    Application status
                  {% endtrans %}
                </span>
                <span>
                  <span aria-hidden="true" class="project__apartment-application-status project__apartment-application-status--{{ application_status.status|trim }}"></span>
                  {% if reserved_or_sold %}
                    {% trans %}
                      {{ reserved_or_sold }}
                    {% endtrans %}
                  {% else %}
                    {{ application_status.label }}
                  {% endif %}
                </span>
              </p>
            </li>
          </ul>
          {% include '@asuntotuotanto/button/button.html.twig' with {
            type: 'secondary',
            disabled: false,
            label: 'Learn more about the apartment'|t,
            href: url('entity.node.canonical', { 'node': nid }),
            aria_label: 'Learn more'|t ~ ', ' ~ 'apartment'|t ~ ' ' ~ apartment_number
            }
          %}

          {% if (is_application_period_active or is_free) %}
            {% include '@asuntotuotanto/button/button.html.twig' with {
              type: 'primary',
              disabled: false,
              label: application_url_title|t,
              href: application_url,
              aria_label: 'Create an application'|t ~ ', ' ~ 'apartment'|t ~ ' ' ~ apartment_number
              }
            %}
          {% endif %}
        </div>
      </li>
    {% endfor %}
  </ul>
</div>

<div class="project__apartments project__apartments--desktop wrapper wrapper--mw-1264" aria-hidden="true">
  <table{{ attributes.addClass(classes, 'project__apartments-table') }}>
    {% if caption_needed %}
      <caption>
      {% if caption %}
        {{ caption }}
      {% else %}
        {{ title }}
      {% endif %}
      {% if (summary_element is not empty) %}
        {{ summary_element }}
      {% endif %}
      </caption>
    {% endif %}
    {% if header %}
      <thead>
        <tr>
          {% for key, column in header %}
            {% if
              key is not same as ('field_apartment_structure') and
              key is not same as ('nid') and
              key is not same as ('field_application_url') and
              key is not same as ('field_right_of_occupancy_payment') %}
                  {% if column.default_classes %}
                    {% set column_classes = [
                      'views-field',
                      'views-field-' ~ fields[key],
                    ] %}
                  {% endif %}
                  <th{{ column.attributes.addClass(column_classes).setAttribute('scope', 'col') }}>
                    {%- if column.wrapper_element -%}
                      <{{ column.wrapper_element }}>
                        {%- if column.url -%}
                          <a href="{{ column.url }}" title="{{ column.title }}" rel="nofollow">{{ column.content }}{{ column.sort_indicator }}</a>
                        {%- else -%}
                          {{ column.content }}{{ column.sort_indicator }}
                        {%- endif -%}
                      </{{ column.wrapper_element }}>
                    {%- else -%}
                      {%- if column.url -%}
                        <a href="{{ column.url }}" title="{{ column.title }}" rel="nofollow">{{ column.content }}{{ column.sort_indicator }}</a>
                      {%- else -%}
                        {{- column.content }}{{ column.sort_indicator }}
                      {%- endif -%}
                    {%- endif -%}
                  </th>
            {% endif %}
          {% endfor %}
          <th>
            {% trans %}
              Application status
            {% endtrans %}
          </th>
          <th>
            <span class="visually-hidden">
              {% trans %}
                Actions
              {% endtrans %}
            </span>
          </th>
        </tr>
      </thead>
    {% endif %}
    <tbody>
      {% for row in rows %}
        {% set apartment_number = row.columns.field_apartment_number.content.0.field_output['#markup']|striptags|trim %}
        {% set apartment_structure = row.columns.field_apartment_structure.content.0.field_output['#markup']|striptags|trim %}
        {% set floor = row.columns.field_floor.content.0.field_output['#markup']|striptags|trim %}
        {% set living_area_size = row.columns.field_living_area.content.0.field_output['#markup']|striptags|trim %}
        {% set nid = row.columns.nid.content.0.field_output['#markup']|striptags|trim %}
        {% set application_status = row.application_status %}
        {% set is_application_period_active = row.is_application_period_active %}
        {% set reserved_or_sold = row.reserved_or_sold %}
        {% set application_url = row.application_url %}
        {% set application_url_title = row.application_url_title %}
        {% set can_apply_afterwards = row.can_apply_afterwards %}
        {% set is_free = row.is_free %}

        {# pre-calculated values #}
        {% set comp = _computed[loop.index0] %}
        {% set debt_free_sales_price = comp.display_price %}

        <tr{{ row.attributes.addClass().setAttribute('data-rooms', comp.rooms).setAttribute('data-area', comp.area).setAttribute('data-price', comp.price_int) }}>
          <td>
            <span>{{ apartment_number }}</span>
            <span>{{ apartment_structure }}</span>
          </td>
          <td>
            <span>{{ floor }}</span>
          </td>
          <td>
            <span>{{ living_area_size }} m<sup>2</sup></span>
          </td>
          <td>
            <span>{{ debt_free_sales_price }}</span>
          </td>
          <td>
            <span>
              {% if reserved_or_sold %}
                {% trans %}
                  <span aria-hidden="true" class="project__apartment-application-status project__apartment-application-status--{{ application_status.status|trim }}"></span>
                  {{ reserved_or_sold }}
                {% endtrans %}
              {% else %}
                <span aria-hidden="true" class="project__apartment-application-status project__apartment-application-status--{{ application_status.status|trim }}"></span>
                {{ application_status.label }}
              {% endif %}
            </span>
          </td>
          <td>
            {% include '@asuntotuotanto/button/button.html.twig' with {
              type: 'supplementary',
              disabled: false,
              size: 'small',
              label: 'Learn more'|t,
              href: url('entity.node.canonical', { 'node': nid }),
              aria_label: 'Learn more'|t ~ ', ' ~ 'apartment'|t ~ ' ' ~ apartment_number
              }
            %}

            {% if (is_application_period_active or (is_free or can_apply_afterwards)) %}
              {% include '@asuntotuotanto/button/button.html.twig' with {
                type: 'primary',
                disabled: false,
                size: 'small',
                label: can_apply_afterwards ? 'Create an after-application'|t : application_url_title|t,
                href: application_url,
                aria_label: 'Create an application'|t ~ ', ' ~ 'apartment'|t ~ ' ' ~ apartment_number
                }
              %}
            {% endif %}
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
</div>
