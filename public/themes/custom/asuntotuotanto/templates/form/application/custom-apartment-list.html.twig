{{ attach_library('asuntotuotanto/application-form-actions') }}

<div class="application-form__apartments">
  <h2>
    {% trans %}
      Käännös tähän
    {% endtrans %}
  </h2>
  <p>
    {% trans %}
      You can search for up to 5 apartments. Arrange the apartments in the order you want.
    {% endtrans %}
  </p>
  <ul class="application-form__apartments-list-header">
    <li><p>{% trans %}Order{% endtrans %}</p></li>
    <li><p>{% trans %}Apartment{% endtrans %}</p></li>
    <li><p>{% trans %}Floor{% endtrans %}</p></li>
    <li><p>{% trans %}Living area size{% endtrans %}</p></li>
    <li><p>{% trans %}Sales price{% endtrans %}</p></li>
    <li><p>{% trans %}Debt free sales price{% endtrans %}</p></li>
  </ul>
  <ol class="application-form__apartments-list" id="application_form_apartments_list">
    {# List items will be generated by JavaScript. #}
  </ol>
</div>