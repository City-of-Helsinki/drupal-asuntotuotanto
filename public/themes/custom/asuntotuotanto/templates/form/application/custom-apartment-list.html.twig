{{ attach_library('asuntotuotanto/application-form-actions') }}
<div class="application-form__apartments">
  {% set project_type = element.application_project_information['#teaser_values'].project_ownership_type %}
  {% set can_apply_afterwards = element.application_project_information['#teaser_values'].project_can_apply_afterwards %}
  {% set price_title = project_type == 'HASO' ? 'Right of occupancy payment'|t : 'Debt-free sales price'|t   %}
  {% set second_price_title = project_type == 'HASO' ? '' : 'Sales price'|t %}
  <h2>
    {% trans %}
      Apartments to apply for
    {% endtrans %}
  </h2>
  <p>
    {% trans %}
      You can apply for up to 5 apartments. Order the apartments in order of precedence.
    {% endtrans %}
  </p>
  <ul class="application-form__apartments-list-header">
    <li><p>{% trans %}Order{% endtrans %}</p></li>
    <li><p>{% trans %}Apartment{% endtrans %}</p></li>
    <li><p>{% trans %}Floor{% endtrans %}</p></li>
    <li><p>{% trans %}Living area size{% endtrans %}</p></li>
    <li style="padding-right:5px;"><p>{{ price_title }}</p></li>
    <li><p>{{ second_price_title }}</p></li>
  </ul>
  <ol class="application-form__apartments-list" id="application_form_apartments_list" aria-label="{{ 'Ordered list of selected apartments'|t }}">
    {# List items will be generated by JavaScript. #}
  </ol>
  <div aria-live="assertive" class="visually-hidden sr-information-box"></div>
</div>
