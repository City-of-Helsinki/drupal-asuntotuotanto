{#
/**
 * @file
 * Button example.
 */
#}

{% if href %}
  <a href="{{ href }}" class="hds-button {% if type %}{{ 'hds-button--' ~ type }}{% endif %} {% if size %}{{ 'hds-button--' ~ size }}{% endif %} {{ is_external ? 'is-external' }}" {% if disabled == true %}disabled{% endif %} {% if target %}target="{{ target }}"{% endif %}>
    {% if icon_first == true %}<span aria-hidden="true" class="hds-icon {{ 'hds-icon--' ~ icon_first_type }}"></span>{% endif %}
    <span class="hds-button__label">{{ label }}</span>
    {% if icon_last == true %}<span aria-hidden="true" class="hds-icon {{ 'hds-icon--' ~ icon_last_type }}"></span>{% endif %}
  </a>
{% else %}
  {% include '@hdbt/button/button.html.twig' with {
    type: type,
    disabled: disabled,
    label: label,
    }
  %}
{% endif %}
