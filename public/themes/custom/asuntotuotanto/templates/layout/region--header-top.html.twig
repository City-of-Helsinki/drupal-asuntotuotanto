{#
/**
 * @file
 * Theme override to display a region.
 *
 * Available variables:
 * - content: The content for this region, typically blocks.
 * - attributes: HTML attributes for the region <div>.
 * - region: The name of the region variable as defined in the theme's
 *   .info.yml file.
 *
 * @see template_preprocess_region()
 */
#}

{% if content %}
  <div{{ create_attribute({'class': ['page-header__top', 'wrapper', 'wrapper--mw-1200']}) }}>
    {{ content }}
    {% if not logged_in %}
      {{ link('Log in'|t, 'route:user.login', {'class': 'login-link'}) }}
    {% endif %}
    {{ drupal_block('language_block:language_content') }}
    <button type="button" class="page-header__mobile-navigation-toggle-button" id="mobile_navigation_toggle_button" aria-hidden="false" aria-expanded="false">
      <span class="visually-hidden">{{ 'Open navigation'|t }}</span>
    </button>
  </div>
{% endif %}
